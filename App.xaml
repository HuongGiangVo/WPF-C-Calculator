<Application x:Class="BaseCalculator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BaseCalculator"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="numbersColor" Color="#444444"/>
        <!-- All number buttons have background color = light black-->
        <SolidColorBrush x:Key="operatorsColor" Color="Orange"/><!-- All operator buttons have background color = orange-->


        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"></Setter> <!--set font color-->
            <Setter Property="FontSize" Value="30"></Setter>
        </Style>
         
    </Application.Resources>
</Application>
